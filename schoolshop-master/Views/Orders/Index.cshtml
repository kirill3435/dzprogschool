@model IEnumerable<OrderViewModel>

@{
    var title = "История заказов";
    ViewData["Title"] = title;
}


<link href="~/css/styles.css" rel="stylesheet" type="text/css" />
    <div class="wrapper">
        <h2>@title</h2>
        @foreach (var order in Model)
        {
            <div class="md-t-1">
                <h3>Номер заказа: @order.Number</h3>
                <h4>Статус заказа: <span id="order_status_@(order.Id)">@(order.Status == OrderStatus.NotPayed ? "Не оплаченный" : "Оплаченный")</span></h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Название продукта</th>
                            <th>Цена</th>
                            <th>Количество</th>
                            <th>Итог</th>
                        </tr>
                    </thead>
                        <tbody>
                            @foreach (var item in order.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.Count</td>
                                    <td>@item.TotalSum</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                <h3>Стоимость заказа: @order.TotalSum</h3>
            </div>
        }
</div>
